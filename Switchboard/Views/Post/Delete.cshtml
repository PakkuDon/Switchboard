@model Switchboard.Models.Post

@{
    ViewBag.Title = "Deleting post";
}

<h2>Deleting post</h2>

<h3>Are you sure you want to delete this post?</h3>
<div>
    <h4>Post details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePosted)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to " + Model.Channel.Name, "View", "Channel", new { id = Model.ChannelID }, null)
        </div>
    }
</div>
